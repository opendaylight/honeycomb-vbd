  <prerequisites>
    <maven>3.1.1</maven>
  </prerequisites>
  <properties>
    <mdsal.version>2.0.2-Beryllium-SR2</mdsal.version>
    <mdsal.model.version>0.8.2-Beryllium-SR2</mdsal.model.version>
    <restconf.version>1.3.2-Beryllium-SR2</restconf.version>
